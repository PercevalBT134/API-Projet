generator client {
  provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Book {
  id            String      @default(uuid()) @id
  title         String
  description   String
  authorId      String
  categoryId    String
  author        Author    @relation(fields: [authorId], references: [id])
  category      Category  @relation(fields: [categoryId], references: [id])
  publishedDate DateTime
  available     Boolean
}

model Author {
  id        String      @default(uuid()) @id
  name      String
  biography String
  birthdate DateTime
  books     Book[]
}

model Category {
  id    String      @default(uuid()) @id
  name  String
  books Book[]
}